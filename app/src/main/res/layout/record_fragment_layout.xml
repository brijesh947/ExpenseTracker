<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bar_background_2">

    <include
        android:id="@+id/search_layout"
        layout="@layout/search_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbar_parent"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/app_bar_background_2"
        app:elevation="0dp"
        app:layout_constraintBottom_toTopOf="@id/expense_recylerview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/app_bar_drawable"
            android:outlineAmbientShadowColor="@null"
            android:outlineSpotShadowColor="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:id="@+id/month_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/only_stroke_ce_low_contrast_fg_33dp"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/user_group_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/abc_diatype_medium"
                    android:text="May 2024"
                    android:textColor="@color/primary_txt"
                    android:textSize="13sp"
                    app:fontFamily="@font/abc_diatype_medium"
                    app:layout_constraintBottom_toBottomOf="@id/search_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/search_button" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/next"
                    android:padding="2dp"
                    android:rotation="90"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="6dp"/>

            </LinearLayout>


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/search_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:paddingBottom="5dp"
                android:src="@drawable/ic_search"
                app:layout_constraintBottom_toBottomOf="@id/month_filter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/month_filter" />

