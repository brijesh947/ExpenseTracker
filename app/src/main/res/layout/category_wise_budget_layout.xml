<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:paddingTop="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/logo_card"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="5dp"
            android:elevation="0dp"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="7dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/group_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/month_icon" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/spending_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/abc_diatype_regular"
            android:text="Movie"
            android:textColor="@color/primary_txt"
            android:textSize="15sp"
            app:fontFamily="@font/abc_diatype_medium"
            app:layout_constraintStart_toEndOf="@id/logo_card"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/edit_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="10dp"
            android:padding="8dp"
            android:src="@drawable/edit_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/limit_text"/>


        <TextView
            android:id="@+id/limit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/abc_diatype_medium"
            android:text="Limit:"
            android:textColor="@color/primary_txt"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/logo_card"
            app:layout_constraintTop_toBottomOf="@id/spending_type" />

        <TextView
            android:id="@+id/limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/abc_diatype_medium"
            android:text="5000"
            android:textColor="@color/primary_txt"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/limit_text"
            app:layout_constraintTop_toBottomOf="@id/spending_type" />

        <TextView
            android:id="@+id/spent_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/abc_diatype_medium"
            android:text="Spent:"
            android:textColor="@color/primary_txt"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/logo_card"
            app:layout_constraintTop_toBottomOf="@id/limit_text" />

        <TextView
            android:id="@+id/spent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/abc_diatype_medium"
            android:text="3000"
            android:textColor="@color/primary_txt"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/spent_text"
            app:layout_constraintTop_toBottomOf="@id/limit_text" />

        <TextView
            android:id="@+id/remaining_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/abc_diatype_medium"
            android:text="Remaining"
            android:textColor="@color/primary_txt"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/logo_card"
            app:layout_constraintTop_toBottomOf="@id/spent_text" />

        <TextView
            android:id="@+id/remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/abc_diatype_medium"
            android:text="2000"
            android:textColor="@color/primary_txt"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/remaining_text"
            app:layout_constraintTop_toBottomOf="@id/spent_text" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/progress_parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/logo_card"
            app:layout_constraintTop_toBottomOf="@id/remaining_text">


            <ProgressBar
                android:id="@+id/expense_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@drawable/full_rounded_31sdp_ce_primary_fg"
                android:progressDrawable="@drawable/progress_bar_drawable"
                android:textColor="@color/secondary_txt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:progress="10" />

            <TextView
                android:id="@+id/limit_exceeded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="5dp"
                android:text="*Limit Exceeded"
                android:textSize="12sp"
                android:visibility="gone"
                android:fontFamily="@font/abc_diatype_medium"
                android:textColor="@color/pausedColor"
                app:layout_constraintTop_toBottomOf="@id/expense_progress"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:id="@+id/seprator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom=".5dp"
            android:background="@color/progress_bar_background"
            app:layout_constraintTop_toBottomOf="@id/progress_parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>