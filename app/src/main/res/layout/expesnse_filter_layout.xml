<?xml version="1.0" encoding="utf-8"?>

<layout>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/user_profile_chip_parent_layout"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/current_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="6"
            android:background="@drawable/chip_selector_on_surface"
            android:button="@null"
            android:checked="true"
            android:fontFamily="@font/abc_diatype_medium"
            android:gravity="center"
            android:paddingVertical="6dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="May 2024"
            android:textAlignment="center"
            android:textColor="@drawable/selector_chip_text"
            app:buttonCompat="@null"
            app:fontFamily="@font/abc_diatype_medium" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/prev_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="3"
            android:background="@drawable/chip_selector_on_surface"
            android:button="@null"
            android:fontFamily="@font/abc_diatype_medium"
            android:gravity="center"
            android:paddingVertical="6dp"
            android:paddingStart="12dp"

            android:paddingEnd="12dp"
            android:text="April 2024"
            android:textAlignment="center"
            android:textColor="@drawable/selector_chip_text"
            app:buttonCompat="@null"
            app:fontFamily="@font/abc_diatype_medium" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="3"
            android:background="@drawable/chip_selector_on_surface"
            android:button="@null"
            android:fontFamily="@font/abc_diatype_medium"
            android:gravity="center"
            android:paddingVertical="6dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"

            android:text="All"
            android:textAlignment="center"
            android:textColor="@drawable/selector_chip_text"
            app:buttonCompat="@null"
            app:fontFamily="@font/abc_diatype_medium" />


    </RadioGroup>
</layout>